<h1>Edit Volunteer</h1>

<h2><%= @volunteer_input.name() %></h2>

<form action="/volunteer_entry/<%= @volunteer_input.id %>/update" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your volunteer:</label>
  <input name="name" type="text">

  <button type="submit">Update Volunteer</button>
</form>

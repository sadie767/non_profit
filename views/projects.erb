<h2><%= @project_input.title %></h2>
  <p><a href="/edit/<%= @project_input.id %>">Edit Project</a></p>

<h3>Volunteer Entry</h3>
<form method='post' action='/projects/<%= @project_input.id %>/add_volunteer'>
  <div class='form-group'>
    <label for='name'>Enter a volunteer:</label>
    <input id='n' name='name' class'form-control' type='text'>
  </div>
  <button type='submit' class="btn-success">Add volunteer!</button>
</form>
<div>
<br><br>
<h2>Volunteers assigned to this project</h2>
<% if @volunteer.any? %>
<ul>
<% @volunteer.each do |item| %>
<li><a href="/volunteer_entry/<%= item.id %>"><%= item.name %></a></li>
<% end %>
</ul>
<% else %>
<h3>Currently, there are no volunteers assigned.</h3>
<% end %>

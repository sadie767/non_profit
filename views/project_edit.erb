
<h1>Update the <%= @project_input.title() %> Title</h1>

<form action="/projects/<%= @project_input.id() %>/update" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="title">Rename your project:</label>
  <input id="t2" name="title" type="text">

  <button type="submit">Update Project</button>
</form>
<br>
<form action="/projects/<%= @project_input.id() %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Project</button>
</form>

<a href='/'>Return Home</a>
